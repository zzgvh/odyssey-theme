---
// Corrected import path
import { SkipLink } from '../../components/demo/odyssey-theme.js';
// Corrected import path
import BaseHead from '../../components/demo/head/BaseHead.astro';
// Corrected import path
import type { Props as BaseHeadProps } from '../../components/demo/head/BaseHead.astro';
// Import ThemeProvider
import ThemeProvider from '../../components/demo/theme-switcher/ThemeProvider.astro';

export interface Props {
	seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en"> 
	<head>
		<BaseHead {...seo} />
	</head>
	<body>
    {/* Script to FORCE set the theme to 'sand' */}
    <script is:inline>
      localStorage.setItem('theme', 'sand');
      // Apply immediately to avoid flash of default theme
      document.documentElement.setAttribute('data-theme', 'sand'); 
    </script>
    {/* ThemeProvider component ensures theme consistency across navigation */}
    <ThemeProvider />
    
    {/* Original body content */}
    <SkipLink />
    <slot name="announcement-bar" />
    <slot name="header" />
    <main id="content">
      <slot />
    </main>
    <slot name="footer" />
	</body>
</html>
