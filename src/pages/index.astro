---
import {
	Button,
	CustomerQuoteSection,
	ThreeColumnTextSection,
	// YouTubeEmbedSection, // Removed import
	StickyTextImageSection,
	TextSection,
	CtaCardSection,
} from '../components/demo/odyssey-theme.js'; 
import Layout from '../layouts/demo/Page.astro'; // Use demo layout
import TextAndImageHero from '../components/demo/sections/heros/TextAndImageHero.astro'; // Use demo hero
import { Icon } from 'astro-icon/components'; // Corrected import

const seo = {
	title: 'Home Page | My New Site', // Updated SEO
	description: 'Welcome to my new Astro site!', // Updated SEO
};
---

{/* AnnouncementBar removed from here */}

<Layout {seo}>
	<TextAndImageHero reversed>
		<div slot="text-container">
			<h1>Datatr@ssel</h1>
			<p>Use Odyssey Theme to jumpstart your company's marketing website.</p>
		</div>
		<div slot="btns-container" style="display: flex; gap: 1rem;"> 
			{/* First Button */}
			<Button href="/theme/get-started" customIcon>
				Get Started 
        <Icon slot="icon" name="ic:baseline-chevron-right" /> 
			</Button>
			{/* Second Button */}
			<Button href="/theme/get-started" customIcon> 
				Get Started 
        <Icon slot="icon" name="ic:baseline-chevron-right" />
			</Button>
		</div>
		<picture slot="image-container">
			<img
				src="/assets/images/landing-1/landing-hero-1.jpg"
				alt="Astro Odyssee"
				id="hero-img"
			/>
		</picture>
	</TextAndImageHero>

	{/* Added placeholder props */}
  <TextSection title="Placeholder Title" lead="Placeholder lead text." />

	<ThreeColumnTextSection /> {/* Skipped adding props here */}

	{/* Added placeholder props */}
  <CustomerQuoteSection 
    quoteText="This is a placeholder quote. It looks much better now!"
    customerName="Placeholder Customer"
  />

	{/* Added placeholder props */}
  <StickyTextImageSection 
    title="Sticky Placeholder"
    content="Some placeholder content for the sticky section."
    imageSrc="/assets/images/landing-1/landing-sticky.jpg" 
    imageAlt="Placeholder Image"
  />

	{/* Removed YouTubeEmbedSection component */}

	{/* Added placeholder props */}
  <CtaCardSection 
    title="Call to Action"
    content="This is a placeholder call to action."
    buttonText="Click Me"
    buttonHref="#"
  />
</Layout>
